FROM amancevice/superset:0.35.2

ARG SUPERSET_USERNAME
ARG SUPERSET_FIRSTNAME
ARG SUPERSET_LASTNAME
ARG SUPERSET_EMAIL
ARG SUPERSET_PASSWORD
ARG DATABASE_DIALECT
ARG POSTGRES_USER
ARG POSTGRES_PASSWORD
ARG POSTGRES_HOST
ARG POSTGRES_PORT
ARG SUPERSET_DB
ARG POSTGRES_DB
ARG SLEEP_TIME

ENV SUPERSET_USERNAME=${SUPERSET_USERNAME}
ENV SUPERSET_FIRSTNAME=${SUPERSET_FIRSTNAME}
ENV SUPERSET_LASTNAME=${SUPERSET_LASTNAME}
ENV SUPERSET_EMAIL=${SUPERSET_EMAIL}
ENV SUPERSET_PASSWORD=${SUPERSET_PASSWORD}
ENV DATABASE_DIALECT=${DATABASE_DIALECT}
ENV POSTGRES_USER=${POSTGRES_USER}
ENV POSTGRES_PASSWORD=${POSTGRES_PASSWORD}
ENV POSTGRES_HOST=${POSTGRES_HOST}
ENV POSTGRES_PORT=${POSTGRES_PORT}
ENV SUPERSET_DB=${SUPERSET_DB}
ENV POSTGRES_DB=${POSTGRES_DB}
ENV SLEEP_TIME=${SLEEP_TIME}

MAINTAINER ${MAINTAINER}
COPY /superset_config.py /etc/superset